<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">


    <FrameLayout
        android:id="@+id/frame_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:paddingTop="0dp"
                android:src="@drawable/pdf_3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="TextView"
                    android:textColor="@color/black"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="58dp"
                    tools:layout_editor_absoluteX="172dp"
                    tools:layout_editor_absoluteY="32dp" />

                <TextView
                    android:id="@+id/fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="TextView"
                    android:textColor="@color/black"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_conversion_absoluteWidth="207dp"
                    tools:layout_editor_absoluteX="172dp"
                    tools:layout_editor_absoluteY="71dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:paddingEnd="40sp"
                        android:text="TextView"
                        android:textColor="@color/black"
                        tools:layout_conversion_absoluteHeight="19dp"
                        tools:layout_conversion_absoluteWidth="207dp"
                        tools:layout_editor_absoluteX="172dp"
                        tools:layout_editor_absoluteY="51dp" />

                    <ImageButton
                        android:id="@+id/Borrar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="?android:attr/statusBarColor"
                        android:clickable="false"
                        android:contentDescription="Descripci贸n hablada del bot贸n"
                        android:longClickable="false"
                        android:src="@drawable/ic_delete_vector" />

                    <ImageButton
                        android:id="@+id/campartir_pdf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="?android:attr/statusBarColor"
                        android:clickable="false"
                        android:contentDescription="Descripci贸n hablada del bot贸n"
                        android:src="@drawable/baseline_share_24" />

                </LinearLayout>

                <View
                    android:id="@+id/divider5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

            </LinearLayout>


        </LinearLayout>

    </FrameLayout>


</LinearLayout>